{
  "name": "virtualstyle",
  "version": "1.0.0",
  "private": false,
  "description": "A virtual stylesheet wrapper to simplify the addition and removal of temporary styles.",
  "repository": "git@github.com:Zeracy/virtualstyle.git",
  "license": "MIT",
  "author": "Zeracy <joaoddvieira@gmail.com>",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:md && yarn lint:ts",
    "lint:js": "yarn eslint src --ext=js",
    "lint:md": "yarn remark . --quiet --frail",
    "lint:ts": "yarn eslint src --ext=ts",
    "prepare": "husky install",
    "test": "jest --config=jest.config.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.9",
    "eslint": "^8.20.0",
    "eslint-config-zeracy": "https://github.com/Zeracy/eslint-config-zeracy#1.1.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "remark-cli": "^11.0.0",
    "remark-lint": "^9.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-preset-lint-recommended": "^6.1.2",
    "typescript": "^4.7.4"
  }
}
